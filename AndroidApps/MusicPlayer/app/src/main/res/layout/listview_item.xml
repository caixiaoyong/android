<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<!--显示歌曲名称,歌手以及歌曲的时间长度三个TextView,一个用来显示歌曲图片的ImageView,
一个用来显示更多信息的ImageButton.-->
    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/album_image"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/music_duration"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5.0dp"
            android:layout_marginEnd="5.0dp"
            android:textColor="#FFADABFF"
            android:text="long"
            />
        <TextView
            android:id="@+id/music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5.0dp"
            android:layout_toRightOf="@+id/album_image"
            android:layout_toEndOf="@+id/album_image"
            android:focusable="true"
            android:textColor="#FFADABFF"
            android:textSize="18sp"
            android:text="title"
            />
        <TextView
            android:id="@+id/music_Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/music_title"
            android:layout_alignStart="@+id/music_title"
            android:layout_marginTop="5.0dip"
            android:layout_below="@id/music_title"
            android:textColor="#FFADABFF"
            android:text="artist"
            />

        <!--<ImageButton
            android:id="@+id/list_down_button"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#DD002C"
            android:layout_below="@id/music_duration"
            android:layout_alignParentRight="true"

            />-->
    </RelativeLayout>
